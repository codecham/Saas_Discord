{
  "name": "bot",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "@sapphire",
  "license": "UNLICENSE",
  "type": "commonjs",
  "dependencies": {
    "@my-project/shared-types": "*",
    "@sapphire/decorators": "^6.1.1",
    "@sapphire/discord.js-utilities": "7.3.2",
    "@sapphire/framework": "^5.3.7",
    "@sapphire/plugin-logger": "^4.0.2",
    "@sapphire/utilities": "^3.18.1",
    "@skyra/env-utilities": "^1.3.0",
    "@types/jasmine": "^5.1.9",
    "better-sqlite3": "^12.4.1",
    "colorette": "^2.0.20",
    "discord.js": "^14.22.1",
    "socket.io-client": "^4.8.1",
    "winston": "^3.18.3",
    "winston-loki": "^6.1.3"
  },
  "devDependencies": {
    "@sapphire/cli": "^1.9.3",
    "@sapphire/prettier-config": "^2.0.0",
    "@sapphire/ts-config": "^5.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.18.6",
    "@types/ws": "^8.5.13",
    "jest": "^30.1.3",
    "prettier": "^3.4.2",
    "ts-jest": "^29.4.5",
    "tsc-watch": "^6.3.0",
    "typescript": "~5.4.5"
  },
  "scripts": {
    "sapphire": "sapphire",
    "generate": "sapphire generate",
    "build": "tsc",
    "watch": "tsc -w",
    "start": "node dist/index.js",
    "dev": "npm run build && npm run start",
    "watch:start": "tsc-watch --onSuccess \"npm run start\"",
    "format": "prettier --write \"src/\"",

    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPatterns=unit",
    "test:integration": "jest --testPathPatterns=integration",
    "test:load": "jest --testPathPatterns=load --runInBand",
    "test:messageCreate": "jest --testPathPatterns=messageCreate.spec.ts",
    "test:messageDelete": "jest --testPathPatterns=messageDelete.spec.ts",
    "test:messageDeleteBulk": "jest --testPathPatterns=messageDeleteBulk.spec.ts",
    "test:messageUpdate": "jest --testPathPatterns=messageUpdate.spec.ts",
    "test:guildMemberAdd": "jest --testPathPatterns=guildMemberAdd.spec.ts",
    "test:guildMemberRemove": "jest --testPathPatterns=guildMemberRemove.spec.ts",
    "test:guildMemberUpdate": "jest --testPathPatterns=guildMemberUpdate.spec.ts",
    "test:debug": "node --inspect-brk ../../node_modules/.bin/jest --runInBand",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "prettier": "@sapphire/prettier-config"
}
