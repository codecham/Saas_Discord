{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,           // ← IMPORTANT: génère les .d.ts
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}